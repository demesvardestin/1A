<% if projects.present? %>
    <p style="margin-bottom: 0; color: green;">
        <%= pluralize(projects.count, "project") %>
    </p>
    <% projects.each do |project| %>
        <h6>
            <%= link_to project.name, project_show_project_path(:slug => project.slug), class:"" %>
        </h6>
        
        <p>
            <%= project.summary.truncate(200) %>
        </p>
        
        <% if current_admin && project.admin == current_admin %>
            <%= link_to "edit", edit_project_project_path(project), class:"btn btn-secondary btn-sm not-thick" %> |
            <%= link_to "delete", project_project_path(project), class:"btn btn-danger btn-sm not-thick",
                method: :delete, data: { alert: "are you sure?" } %>
        <% end %>
        <hr>
    <% end %>
<% else %>
    <h6>no results found</h6>
<% end %>